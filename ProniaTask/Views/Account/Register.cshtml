@model RegisterVM

<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height"
         data-bg-image="assets/images/breadcrumb/bg/1-1-1919x388.jpg">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">Login & Register Page</h2>
                        <ul>
                            <li>
                                <a href="index.html">Home</a>
                            </li>
                            <li>Login | Register</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="login-register-area section-space-y-axis-100">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6 pt-5 pt-lg-0">
                    <form method="post">
                        <div class="login-form">
                            <h4 class="login-title">Register</h4>
                            <div class="row">
                                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                                <div class="col-md-6 col-12">
                                    <label asp-for="Name">First Name</label>
                                    <input asp-for="Name" placeholder="Name" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 col-12">
                                    <label asp-for="Surname">Last Name</label>
                                    <input asp-for="Surname" placeholder="Surname" />
                                    <span asp-validation-for="Surname" class="text-danger"></span>
                                </div>
                                <div class="col-md-12">
                                    <label asp-for="Username">Username</label>
                                    <input asp-for="Username" placeholder="Username" />
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>
                                <div class="col-md-12">
                                    <label asp-for="Email">Email</label>
                                    <input asp-for="Email" placeholder="Email" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="col-md-12">
                                    <label>Choose gender</label>
                                    @foreach (var gender in Enum.GetNames(typeof(Gender)))
                                    {
                                        <div class="form-check form-check-inline">
                                            <label asp-for="Gender">@gender</label>
                                            <input value="@gender" name="Gender" placeholder="@gender" type="radio" />
                                        </div>
                                        <span asp-validation-for="Gender" class="text-danger"></span>
                                    }
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="Password">Password</label>
                                    <input asp-for="Password" placeholder="Password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="ConfirmPassword">Confirm Password</label>
                                    <input asp-for="ConfirmPassword" placeholder="ConfirmPassword" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                                <div class="col-6">
                                    <button class="btn btn-custom-size lg-size btn-pronia-primary">
                                        Register
                                    </button>
                                </div>
                                <div class="col-6 text-success" style="margin-top:15px;">
                                    <a asp-action="login" asp-controller="account">You have an account</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>