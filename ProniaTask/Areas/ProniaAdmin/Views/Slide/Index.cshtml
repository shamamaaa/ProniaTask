@model List<Slide>
@{ int count = 0;}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h1 class="card-title .h1">Slide</h1>

            <a asp-action="create" asp-controller="slide" class="btn btn-success">
                Create slide
            </a>

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                No
                            </th>
                            <th>
                                Images
                            </th>
                            <th>
                                Title
                            </th>
                            <th>
                                Order
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>
                                    @count
                                </td>
                                <td>
                                    <img style="width:80px;height:80px;" src="~/assets/images/slider/@item.ImageUrl" />
                                </td>
                                <td>
                                    @item.Title
                                </td>
                                <td>
                                    @item.Order
                                </td>

                                <td>
                                    <div class="btn-group">
                                        <a class="btn-sm btn btn-danger" asp-action="Delete" asp-controller="Slide" asp-route-id="@item.Id">
                                            <i class="mdi mdi-delete-forever btn-icon-primary">
                                            </i>
                                        </a>
                                        <a class="btn-sm btn btn-warning" asp-action="Update" asp-controller="Slide" asp-route-id="@item.Id">
                                            <i class="mdi mdi-lead-pencil btn-icon-primary">
                                            </i>
                                        </a>
                                        <a class="btn-sm btn btn-primary" asp-action="Detail" asp-controller="Slide" asp-route-id="@item.Id">
                                            <i class="mdi mdi-open-in-new btn-icon-primary">
                                            </i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



