@model Category



<div class="container">
    <div class="col-12 text-center mt-4 mb-5">
        <ul class="list-group">
            <li class="list-group-item active" aria-current="true">@Model.Name</li>
            <li class="list-group-item">Product count: @Model.Products.Count</li>
        </ul>
    </div>

    <div class="col">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (Product item in Model.Products)
            {
                <div class="col">
                    <div class="card">
                        <img src="~/assets/images/website-images/@item.ProductImages.FirstOrDefault(img => img.ProductId == item.Id && img.IsPrimary == true).Url" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text">Price: $@item.Price</p>
                            <p class="card-text">SKU: @item.SKU</p>
                            <p class="card-text">@item.Description</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</div>

