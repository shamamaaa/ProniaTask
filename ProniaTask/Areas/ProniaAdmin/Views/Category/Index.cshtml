@model PaginationVM<Category>
@{
    int count = (Model.CurrentPage - 1) * 5;
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h1 class="card-title .h1">Category</h1>

            <a asp-action="create" asp-controller="category" class="btn btn-success">
                Create category
            </a>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                No
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Product count
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.Items)
                        {
                            count++;
                            <tr>
                                <td>
                                    @count
                                </td>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @item.Products.Count
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id" class="btn-sm btn btn-danger">
                                            <i class="mdi mdi-delete-forever btn-icon-primary">
                                            </i>
                                        </a>
                                        <a asp-action="Update" asp-controller="Category" asp-route-id="@item.Id" class="btn-sm btn btn-warning">
                                            <i class="mdi mdi-lead-pencil btn-icon-primary">
                                            </i>
                                        </a>
                                        <a asp-action="Detail" asp-controller="Category" asp-route-id="@item.Id" class="btn-sm btn btn-primary">
                                            <i class="mdi mdi-open-in-new btn-icon-primary">
                                            </i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    <li class="page-item @(Model.CurrentPage-1==0 ? "disabled":"")"><a class="page-link" asp-action="index" asp-controller="category" asp-route-page="@(Model.CurrentPage-2)">Previous</a></li>
                    @for (int i = 1; i <= Model.TotalPage; i++)
                    {
                        <li class="page-item @(i==Model.CurrentPage ? "disabled":"")"><a class="page-link" asp-action="index" asp-controller="category" asp-route-page="@(i-1)">@i</a></li>
                    }
                    <li class="page-item @(Model.CurrentPage==Model.TotalPage ? "disabled":"")"><a class="page-link" asp-action="index" asp-controller="category" asp-route-page="@(Model.CurrentPage)">Next</a></li>
                </ul>
            </nav>
        </div>
    </div>
</div>



